generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = "5"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// data models

// Proceso Scraping Resoluciones Tribunal Fiscal

model ResolucionesTribunalFiscal {
  id_RTF                      Int @id @default(autoincrement())
  cod_RTF                     String @db.VarChar(50)
  dsc_archivo_RTF             String @db.VarChar(250)
  dsc_titulo_sumilla          String @db.VarChar(1000)
  dsc_glosa_sumilla           String @db.VarChar(5000)
  flg_archivo_descargado      String @db.VarChar(1)
  flg_archivo_procesado       String @db.VarChar(1)
  flg_archivo_copiado         String @db.VarChar(1)  
  dsc_ubicacion_final_pdf     String? @db.VarChar(500)
  fch_resolucion              DateTime? @default(now())
  cod_expediente              String? @db.VarChar(50)
  created_at                  DateTime @default(now())
  updated_at                  DateTime @default(now())
}

// Proceso Scraping Resoluciones Indecopi Segunda Instancia

model ResolucionesIndecopi {
  id_resolucion_indecopi      Int @id @default(autoincrement())
  cod_resolucion              String @db.VarChar(50)
  cod_expediente              String @db.VarChar(50)
  dsc_archivo_resolucion      String @db.VarChar(250)
  dsc_partes                  String @db.VarChar(1000)              
  dsc_glosa_sumilla           String @db.VarChar(5000)
  fch_resolucion              DateTime @default(now())
  flg_archivo_descargado      String @db.VarChar(1)
  flg_archivo_procesado       String @db.VarChar(1)
  flg_archivo_copiado         String @db.VarChar(1)
  dsc_ubicacion_final_pdf     String @db.VarChar(500)
  dsc_ubicacion_portal        String @db.VarChar(50)
  created_at                  DateTime @default(now())
  updated_at                  DateTime @default(now())
}

// REMCOMPARA - Deltaview


model ProcesoComparacion {
  id  Int      @id @default(autoincrement())
  documentoOriginal			String @db.VarChar(255)
  documentoModificado		String @db.VarChar(255)
  documentoComparacion		String @db.VarChar(255)
  usuario					String @db.VarChar(10)
  email						String @db.VarChar(255)
  procesado					String @db.VarChar(1)
  created_at					DateTime @default(now())
}

// Proceso Scraping Expedientes Tribunal Constitucional

model TC_Expedientes {
  idExpediente                Int @id @default(autoincrement())
  expedienteTC                String @db.VarChar(1000)
  expedientePJ                String @db.VarChar(1000)
  idPortalTC                  Int @default(0)
  totalDatosExpediente        Int @default(0)
  totalAudienciasPublicas     Int @default(0)
  totalResolucionesSentencias Int @default(0)  
  totalVistasCausa            Int @default(0)
  created_at                  DateTime @default(now())
  updated_at                  DateTime @default(now())
  demandante                  String?  @db.VarChar(1000)
  demandado                   String? @db.VarChar(1000)
  activo                      String @db.VarChar(1)

  usuarios                   TC_ExpedientesUsuarios[]
  detalleactuaciones         TC_ExpedientesDetalle[]

//  @@map("TC_Expedientes")
}

model TC_ExpedientesUsuarios {
  id           Int          @id @default(autoincrement())
  usuario      String
  Expedientes  TC_Expedientes? @relation(fields: [IdExpediente], references: [idExpediente])
  IdExpediente Int?

//  @@map("TC_ExpedientesUsuarios")
}


model TC_ExpedientesDetalle {
  id               Int          @id @default(autoincrement())
  idExpediente     Int?
  tabla            String @db.VarChar(255)
  idDetalle        Int
  etiqueta         String? @db.VarChar(255)
  valor            String? @db.VarChar(255)
  Expedientes      TC_Expedientes? @relation(fields: [idExpediente], references: [idExpediente])
  created_at       DateTime @default(now())
  updated_at       DateTime @default(now())
  idProceso        Int?

//  @@map("TC_ExpedientesDetalle")
}

model TC_ProcesoScraping {
  idProceso  Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  portalURL  String
  concluido  Int @default(0)
  totalExpedientes Int @default(0)
  updated_at   DateTime? @default(now())

//  @@map("TC_ProcesoScraping")
}


// Proceso Scraping Expedientes CEJ

model CEJ_Expedientes {
  idExpediente Int      @id @default(autoincrement())
  expedientePJ String   @db.VarChar(1000)
  cuadernos    Int @default(0)
  actuaciones  Int @default(0)
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
  juzgado      String?  @db.VarChar(1000)
  partes       String? @db.VarChar(1000)
  activo       String? @db.VarChar(1)

  usuarios                   CEJ_ExpedientesUsuarios[]
  procesos                   CEJ_ProcesoScrapingExpedientes[]
  detalleactuaciones         CEJ_ExpedientesActuaciones[]

//  @@map("TRACK_PJ_Expedientes")
}

model CEJ_ExpedientesUsuarios {
  id           Int          @id @default(autoincrement())
  usuario      String
  Expedientes  CEJ_Expedientes? @relation(fields: [IdExpediente], references: [idExpediente])
  IdExpediente Int?

//  @@map("TRACK_PJ_ExpedientesUsuarios")
}


model CEJ_ExpedientesActuaciones {
  id               Int          @id @default(autoincrement())
  idExpediente     Int?
  idActuacion      String @db.VarChar(255)
  fecha            DateTime @default(now())
  resolucion       String? @db.VarChar(80)
  tiponotificacion String? @db.VarChar(255)
  acto             String? @db.VarChar(255) 
  fojas            String? @db.VarChar(50)
  proveido         DateTime? @default(now())
  sumilla          String? @db.VarChar(1000)  
  descripcion_usr  String? @db.VarChar(255)
  resolucion_archivo String? @db.VarChar(150)
  Expedientes      CEJ_Expedientes? @relation(fields: [idExpediente], references: [idExpediente])
  created_at       DateTime @default(now())
  updated_at       DateTime @default(now())
  idProcesoUltimo  Int?

//  @@map("TRACK_PJ_ExpedientesActuaciones")
}

model CEJ_ProcesoScraping {
  idProceso  Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  portalURL  String
  concluido  Int @default(0)
  totalExpedientes Int @default(0)
  updated_at   DateTime? @default(now())

  ProcesosExpedientes CEJ_ProcesoScrapingExpedientes[]

//  @@map("TRACK_PJ_ProcesoScraping")
}

model CEJ_ProcesoScrapingExpedientes {
  id               Int              @id @default(autoincrement())
  ProcesoScraping  CEJ_ProcesoScraping? @relation(fields: [idProceso], references: [idProceso])
  idProceso        Int?
  Expedientes      CEJ_Expedientes?     @relation(fields: [idExpediente], references: [idExpediente])
  idExpediente     Int?
  totalCuadernos   Int
  totalActuaciones Int
  error            String?
  created_at       DateTime? @default(now())  

//  @@map("TRACK_PJ_ProcesoScrapingExpedientes")
}

// Auditoria Scraping Proyecto de Ley

model AuditoriaScraping {
  Id                          Int @id @default(autoincrement())
  Fecha            			  DateTime? @default(now())
  Proceso             		  String
  Estado                  	  String
  Mensaje                  	  String
  
  @@map("AuditoriaScraping")
}